/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@sanring/gx-breadcrumb": [
        "../../packages/gx-breadcrumb/dist"
      ],
      "@sanring/gx-card": [
        "../../packages/gx-card/dist"
      ],
      "@sanring/gx-drag-drop": [
        "../../packages/gx-drag-drop/dist"
      ],
      "@sanring/gx-styles": [
        "../../packages/gx-styles/dist"
      ],
      "@sanring/gx-ui": [
        "../../packages/gx-ui/dist"
      ]
    },
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    },
    {
      "path": "../../packages/gx-breadcrumb/tsconfig.lib.json"
    },
    {
      "path": "../../packages/gx-breadcrumb/tsconfig.spec.json"
    },
    {
      "path": "../../packages/gx-styles/tsconfig.lib.json"
    },
    {
      "path": "../../packages/gx-styles/tsconfig.spec.json"
    },
    {
      "path": "../../packages/gx-ui/tsconfig.lib.json"
    },
    {
      "path": "../../packages/gx-ui/tsconfig.spec.json"
    },
    {
      "path": "../../packages/gx-ui/tsconfig.lib.json"
    },
    {
      "path": "../../packages/gx-ui/tsconfig.spec.json"
    },
    {
      "path": "../../packages/gx-drag-drop/tsconfig.lib.json"
    },
    {
      "path": "../../packages/gx-drag-drop/tsconfig.spec.json"
    },
    {
      "path": "./projects/gx-card/tsconfig.lib.json"
    },
    {
      "path": "./projects/gx-card/tsconfig.spec.json"
    }
  ]
